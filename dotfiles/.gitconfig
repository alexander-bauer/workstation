[user]
	email = sasha@linux.com
	name = Alexander Bauer
[push]
	default = simple
[core]
	pager = less -rM
	editor = nvim

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
	pager = true

[alias]
	tree = log --graph --oneline --decorate --all
[rebase]
	autosquash = true
[pull]
	rebase = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[init]
	defaultBranch = main
